{
    "version": 2,
    "cron": [
        {
            "path": "/app/cron/data_update.py",
            "schedule": "1 1 1 * *"
        }
    ],
    "builds": [
        {
            "src": "app/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept",
                "Access-Control-Allow-Credentials": "true"
            },
            "continue": true
        },
        {
            "src": "/(.*)",
            "dest": "app/main.py",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS",
                "PATCH"
            ]
        }
    ]
}